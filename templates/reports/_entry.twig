{% extends "/_layouts/site" %}

{% block main %}
    <div class="container mx-auto relative py-16">
        {% include '/_partials/_breadcrumbs.twig' %}
        <div class="mb-16"></div>
        <div class="md:max-w-3xl mx-auto">
            <h2>{{ entry.title }}</h2>
            <p>{{ entry.postDate | date('d F Y') }}</p>
            <hr class="my-8">
            <div class="richtext">
                {{ entry.details }}
            </div>
        </div>
    </div>
{% endblock %}