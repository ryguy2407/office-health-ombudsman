{% cache globally for 7 days %}
    <footer id="footer">
        <div class="bg-primary-500 w-full">
            <div class="container py-8 md:py-16">
                <div class="-mx-3 flex flex-wrap">

                    {% for block in footer.footerNavigation.level(1).all() %}
                        {% switch block.type.handle %}
                        {% case 'footerColumn' %}
                            <div class="px-3 md:flex-1 w-1/2 md:w-full">
                                {% for footerMenu in block.children.all() %}
                                    {% switch footerMenu.type.handle %}
                                    {% case 'footerMenu' %}
                                        {% set nodes = craft.navigation.nodes(footerMenu.navigation).level(1).all() %}

                                        <ul  class=" mb-4 text-sm">
                                            {% nav node in nodes %}
                                                <li class="mb-2">

                                                    <a class="inline-block text-navy {% if loop.first %}uppercase font-bold{% endif %} hover:opacity-75 mb-2" href="{{ node.url }}">{{ node.title }}</a>

                                                    {% if node.hasDescendants() %}
                                                        <ul class="">
                                                            {% set children = node.children.all() %}
                                                            {% for child in children %}
                                                                <li class="mb-1">
                                                                    <a class="inline-block text-white hover:opacity-75" href="{{ child.url }}">{{ child.title }}</a>
                                                                </li>
                                                            {% endfor %}
                                                        </ul>
                                                    {% endif %}

                                                </li>
                                            {% endnav %}
                                        </ul>
                                    {% endswitch %}
                                {% endfor %}
                            </div>
                        {% endswitch %}
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="bg-white">
            <div class="container py-10">
                <div class="-mx-3 flex flex-wrap items-center">

                    <div class="px-3 flex justify-center md:justify-between w-full md:w-2/3 mb-4 md:mb-0">
                        <ul class="flex flex-wrap text-sm">
                            <li><a href="#">{{ 'Â©'|raw }} Office of the Health Ombudsman</a></li>
                            <li class="ml-4"><a href="/privacy-policy" class="hover:opacity-70">Privacy policy</a></li>
                            <li class="ml-4"><a href="/disclaimer" class="hover:opacity-70">Disclaimer</a></li>
                        </ul>
                    </div>
                    <div class="px-3 w-full md:w-1/3 ">
                        <ul class="flex flex-wrap justify-center md:justify-end text-sm">
                            <li class="ml-4"><a target="_blank" href="http://newwordorder.com.au" class="hover:opacity-70">Site by NWO</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endcache %}