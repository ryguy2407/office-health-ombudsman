{% if entry is defined %}

    {% set blocks = entry.pageBuilder.all() %}
    {% for block in blocks %}

        {% set pageSections = block.pageSection.all() %}
        <section class="section relative py-10 md:py-24 overflow-hidden">
            {% for block in pageSections %}
                <div class="mb-8">
                    {% include ('/_partials/_module/' ~ block.type) %}
                </div>
            {% endfor %}
        </section>

    {% endfor %}


{% endif %}


