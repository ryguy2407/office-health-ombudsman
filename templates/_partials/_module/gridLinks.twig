{% if module.type.handle == 'gridLinks' %}

    <div class="container mx-auto relative">
        <div class="flex flex-col md:grid md:grid-cols-4 md:gap-8">
            {% for block in module.gridMatrix.all() %}

                {% if block.type == "column" %}
                    {% set relatedLink = block.relatedLink.one() %}
                    <a href="{% if relatedLink %}{{ relatedLink.url }}{% else %}#{% endif %}" class="mb-8 md:mb-0 bg-white p-8 text-center transition duration-500 ease-in-out hover:shadow-lg">
                        {% set icon = block.icon.one() %}
                        {% if icon %}
                            <img class="mx-auto mb-4" src="{{ icon.url }}" alt="{{ icon.filename }}">
                        {% endif %}
                        <h5>{{ block.text }}</h5>
                    </a>
                {% endif %}

            {% endfor %}
        </div>
    </div>

{% endif %}