{% if module.type.handle == 'gridLinks' %}

    <div class="container mx-auto relative">
        <div class="flex flex-col lg:flex-row -mx-2">
            {% for block in module.gridMatrix.all() %}

                {% if block.type == "column" %}
                    {% set relatedLink = block.relatedLink.one() %}
                    <a href="{% if relatedLink %}{{ relatedLink.url }}{% else %}#{% endif %}" class="w-full lg:w-1/4 mb-8 lg:mb-0 text-center px-2">
                        <div class="bg-white p-8 hover:shadow-lg transition duration-500 ease-in-out">
                            {% set icon = block.icon.one() %}
                            {% if icon %}
                                <img class="mx-auto mb-4" src="{{ icon.url }}" alt="{{ icon.filename }}">
                            {% endif %}
                            <h5>{{ block.text }}</h5>
                        </div>
                    </a>
                {% endif %}

            {% endfor %}
        </div>
    </div>

{% endif %}