{% if module.type.handle == 'table' %}

    <div class="md:max-w-3xl mx-auto relative">
        <div class="flex justify-end">
            <input type="text" class="tableSearch w-1/3" placeholder="Search for names..">
        </div>
        <table class="w-full searchTable">
            <tbody>
                {% for block in module.tableRows.all() %}
                    {% if loop.index == 1 %}
                        {% set heading = true %}
                    {% else %}
                        {% set heading = false %}
                    {% endif %}
                    <tr {% if not heading %}class="searchable"{% endif %}>
                        {% for column in block.tableColumns.all() %}
                            {% if heading %}
                                <th class="text-left font-bold border-b-2 border-light p-4">
                                    <div class="flex justify-between items-center uppercase">
                                        {{ column.columnText }}
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                            {% else %}
                                <td class="p-4 border-b border-light">
                                    {{ column.columnText }}
                                </td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endif %}