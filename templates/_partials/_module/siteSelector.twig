<div class="container px-2 relative">
    {% if module.siteSections|length %}

        <div class="flex -mx-2">
            {% for block in module.siteSections.all() %}
                <div class="w-1/2 px-2 flex">
                    <div class="section-bg-{{ block.sectionBackgroundColour }} flex">
                        <div class="flex justify-between">
                            <div class="p-8 w-2/3 flex flex-col flex-stretch items-start">
                                <p class="text-white">{{ block.sectionTitle }}</p>
                                <h3 class="font-bold text-white">{{ block.sectionDescription }}</h3>
                                <a href="#" class="btn btn-white mt-auto">Learn more</a>
                            </div>
                            <div class="flex items-end">
                                {% set image = block.sectionIcon.one() %}

                                <img class="lazyload rounded object-cover w-full"
                                 src="{{ image.getUrl() }}"
                                 alt="{{ image.title }}">
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% endif %}
</div>