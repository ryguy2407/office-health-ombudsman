{% if module.type.handle == 'calloutHeadingAndContent' %}
    <div class="container relative">
        <div class="md:max-w-2xl mx-auto richtext {% if module.calloutCentre %}text-center{% endif %}">
            <h3 class="font-bold">{{ module.calloutHeading }}</h3>
            <p class="text-xl text-navy-500">{{ module.calloutText }}</p>
        </div>
    </div>
{% endif %}